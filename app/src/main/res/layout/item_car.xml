<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">
<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/iv_car"
    android:layout_width="80dp"
    android:layout_height="80dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/colorAccent"
        android:gravity="end"
        android:textSize="@dimen/text002"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toEndOf="@+id/iv_car"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Toyota Camry GLE 2019" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Toyota Camry GLE 2019"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:textColor="@color/grayCal"
        android:textSize="@dimen/text000"
        android:fontFamily="@font/sofia_pro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_car"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_car"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Toyota Camry GLE "
            android:textColor="@color/grayCal"
            android:layout_weight=".5"
            android:textSize="@dimen/text000"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:fontFamily="@font/sofia_pro"
            app:drawableStartCompat="@drawable/ic_user" />
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Toyota Camry GLE"
            android:textColor="@color/grayCal"
            android:textSize="@dimen/text000"
            android:layout_weight=".5"
            android:fontFamily="@font/sofia_pro"
            android:gravity="end"
            android:drawablePadding="10dp"
            app:drawableEndCompat="@drawable/ic_location" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>